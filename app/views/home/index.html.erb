<% provide :hero_unit, (render "hero_unit") %>

<%
  transfer_day = TransferDay.current
  if !transfer_day.nil? && transfer_day.active?
%>
<h1>Current Transfer Day</h1>

<%= render 'transfer_days/transfer_day_summary', transfer_day: transfer_day %>

<% end %>

<%
   d11_match_day = D11MatchDay.current
   if !d11_match_day.nil?
%>
<h1>Current D11 Match Day</h1>

<h2><%= d11_match_day.name %> <%= render 'd11_match_days/context_menu', d11_match_day: d11_match_day %></h2>

<div class="section">
  <% cache [ @d11_match_day, :d11_match_day_fixtures ] do %>
  <%= render 'd11_match_days/d11_match_day_fixtures', d11_match_day: d11_match_day %>
  <% end %>
  <div class="related-section league-table-container">
    <h3>D11 League table</h3>
    <p>Current top 10 standings.<p>
    <% cache [ @d11_match_day, :d11_league_table_top_10] do %>
    <%= render 'd11_team_table_stats/league_table_simple', d11_team_table_stats: d11_match_day.d11_team_table_stats.limit(10) %>
    <% end %>
  </div>  
</div>
<% end %>


<%
   match_day = MatchDay.current
   if !match_day.nil?
%>
<h1>Current Match Day</h1>

<h2><%= match_day.name %> <%= render 'match_days/context_menu', match_day: match_day %></h2>

<div class="section">
  <% cache [ match_day, :match_day_fixtures ] do %>
  <%= render 'match_days/match_day_fixtures', match_day: match_day %>
  <% end %>
  <div class="related-section league-table-container">
    <h3>League table</h3>
    <p>Current top 10 standings.<p>
    <% cache [ match_day, :league_table_top_10] do %>
    <%= render 'team_table_stats/league_table_simple', team_table_stats: match_day.team_table_stats.limit(10) %>
    <% end %>
  </div>    
</div>
<% end %>

<%
  season = Season.current
  if !season.nil?  
%>

<h1>Player Statistics</h1>

<p>Top 10 players <%= season.name %>.</p>

<% cache [ season, :player_season_stat_top_10_table ] do %>
<%= render 'player_season_stats/table', player_season_stats: PlayerSeasonStat.where(season: season).limit(10).order(points: :desc) %>
<% end %>

<% end %>